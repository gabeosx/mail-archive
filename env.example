# Email Provider Credentials
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password-or-app-password

# IMAP Server Configuration
IMAP_HOST=imap.example.com
IMAP_PORT=993

# Backblaze B2 Credentials
B2_ACCOUNT_ID=your_b2_account_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your-b2-bucket-name

# Roundcube Web UI auth (set within Roundcube after first run if needed)
WEB_USER=
WEB_PASSWORD=

# Email synchronization and pruning configuration
PRUNE_DAYS=365

# Folder patterns to sync and prune
# Use "*" for all folders, or specify folders separated by spaces
# Examples:
#   SYNC_FOLDERS=*                           # All folders
#   SYNC_FOLDERS=INBOX "Sent" "Drafts"       # Specific folders
#   SYNC_FOLDERS=INBOX "[Gmail]/Sent Mail"   # Gmail-style folders
SYNC_FOLDERS=*

# Dry run mode - set to "true" to enable dry run for mbsync/imapfilter/rclone services
DRY_RUN=false